@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/home.js"></script>
    <link rel="stylesheet" href="~/css/home.css" type="text/css" media="all" />
</head>

<body>
    <div class="photo-background-container">
        <div class="overlay"></div>
        <img class="background-image" src="~/images/hero-02.jpg">
        <div class="container inner-container">
            <center><h1>Adventure calls, will you answer?</h1></center>
            <input type="hidden" id="hiddenUserId" value="@ViewBag.UserId" />
            <form class="main-form d-flex flex-row align-items-center justify-content-center">
                <span hidden id="locationId"></span>
                <select class="airportDropdown dropdownDeparture form-control form-control-lg rounded-pill" id="departureAirport">
                    <option value="" disabled selected>Departure Airport</option>
                </select>

                    <i class="fa-solid fa-arrow-right right-arrow"></i>

                <span hidden id="destinationId"></span>
                <select class="airportDropdown dropdownArrival form-control form-control-lg rounded-pill" id="arrivalAirport">
                    <option value="" disabled selected>Arrival Airport</option>
                </select>

                <span class="line-seperate">|</span>

                <input type="date" class="date form-control form-control-lg rounded-pill" id="startDate" />

                    <i class="fa-solid fa-arrow-right-arrow-left right-left-arrow"></i>

                <input type="date" class="date form-control form-control-lg rounded-pill" id="endDate"/>

                <span class="line-seperate">|</span>

                <div class="input-group passengers-div">
                    <div class="input-icons">
                        <i class="fa-solid fa-user-group icon"></i>
                        <input type="number" class="form-control form-control-lg rounded-pill input-passenger input-field" id="passengerNumber" value="1" min="1" max="25">
                    </div>
                </div>

                <button type="button" class="btn btn-primary rounded-pill btn-lg" id="btnAdd" onclick="BookFlight()">Book It!</button>
            </form>
            <center>
                <div class="col-md-6">
                    <div class="alert alert-danger" id="alertDanger"></div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-success" id="alertSuccess"></div>
                </div>
            </center>
        </div>
    </div>


    <div class="container flight-data-container">
        <div class="table-holder justify-content-center align-items-center">
            <center><h3 class="upcoming-h3">Upcoming flights</h3></center>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <td>Departure</td>
                        <td>Arrival</td>
                        <td>Departure Date</td>
                        <td>Arrival Date</td>
                    </tr>
                </thead>
                <tbody class="tbody">
                    @*Booking records will to populated here*@
                </tbody>
            </table>
        </div>
    </div>
</body>


