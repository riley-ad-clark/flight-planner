<script type="text/javascript">
    $(document).ready(function () {
        loadData();
    })
    function loadData() {
        $.ajax({
            url: "/Booking/GetMyBooking",
            type: "GET",
            contentType: "application/json",
            dataType: "",
            success: function (response) {
                console.log(response);
                var html = '';
                $.each(response, function (key, item) {
                    console.log(key);
                    html += '<tr>';
                    html += '<td>' + item.flightId + '</td>';
                    html += '<td>' + item.departure + '</td>';
                    html += '<td>' + item.arrival + '</td>';
                    html += '<td>' + item.startDate + '</td>';
                    html += '<td>' + item.endDate + '</td>';
                    html += '<td><a href="#" onClick="return CancelBooking(' + item.bookingId + ')">Cancel</a></td>';
                    html += '</tr>';
                });
                $('.tbody').html(html);
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
    function CancelBooking(bookingId) {
        var ans = confirm('Are you sure you want to cancel this booking?');
        if (ans) {
            $.ajax({
                url: "/Booking/CancelBooking/" + bookingId,
                type: "POST",
                contentType: "application/json",
                dataType: "json",
                success: function (response) {
                    loadData();

                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
    }
</script>
<main>


    <div class="row">

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td>FlightId</td>
                    <td>Departure</td>
                    <td>Arrival</td>
                    <td>Departure Time</td>
                    <td>Arrival Time</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody class="tbody">
                @*Booking records will to populated here*@
            </tbody>
        </table>
    </div>
</main>